<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECD89E"
    tools:context=".MenuActivity">

    <ImageButton
        android:id="@+id/toDoButton"
        android:layout_width="98dp"
        android:layout_height="90dp"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:contentDescription="@string/todolist"
        android:onClick="launchToDoActivity"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/meditationButton"
        app:layout_constraintEnd_toStartOf="@+id/toDoLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label"
        app:srcCompat="@drawable/to_do_list_icon" />

    <ImageButton
        android:id="@+id/meditationButton"
        android:layout_width="107dp"
        android:layout_height="88dp"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:background="#FFFFFF"
        android:onClick="launchMeditationActivity"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/journalButton"
        app:layout_constraintEnd_toStartOf="@+id/meditateLabel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toDoButton"
        app:srcCompat="@drawable/mediation_icon" />

    <ImageButton
        android:id="@+id/journalButton"
        android:layout_width="103dp"
        android:layout_height="109dp"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:onClick="launchBulletJournalActivity"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/weatherButton"
        app:layout_constraintEnd_toStartOf="@+id/journalLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meditationButton"
        app:srcCompat="@drawable/journal_icon" />

    <ImageButton
        android:id="@+id/weatherButton"
        android:layout_width="101dp"
        android:layout_height="107dp"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:onClick="launchWeatherActivity"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/weatherLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/journalButton"
        app:srcCompat="@drawable/weather_icon" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="114dp"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:fontFamily="@font/allan"
        android:text="What would you like to do?"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toDoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:layout_marginBottom="90dp"
        android:fontFamily="@font/allan"
        android:text="Create to-do list"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/meditateLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/toDoButton"
        app:layout_constraintTop_toBottomOf="@+id/label" />

    <TextView
        android:id="@+id/meditateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/allan"
        android:text="Meditate"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/journalLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toDoLabel" />

    <TextView
        android:id="@+id/journalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="106dp"
        android:layout_marginRight="106dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/allan"
        android:text="Bullet Journal"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/weatherLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/journalButton"
        app:layout_constraintTop_toBottomOf="@+id/meditateLabel" />

    <TextView
        android:id="@+id/weatherLabel"
        android:layout_width="86dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="94dp"
        android:layout_marginRight="94dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/allan"
        android:text="Check weather"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weatherButton"
        app:layout_constraintTop_toBottomOf="@+id/journalLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>